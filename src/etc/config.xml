<?xml version="1.0"?>
<config>
    <modules>
        <Webgriffe_ServerGoogleAnalytics>
            <version>1.0.0</version>
        </Webgriffe_ServerGoogleAnalytics>
    </modules>
    <global>
        <blocks>
            <webgriffe_servergoogleanalytics>
                <class>Webgriffe_ServerGoogleAnalytics_Block</class>
            </webgriffe_servergoogleanalytics>
            <googleanalytics>
                <rewrite>
                    <ga>Webgriffe_ServerGoogleAnalytics_Block_GoogleAnalytics_Ga</ga>
                </rewrite>
            </googleanalytics>
        </blocks>
        <helpers>
            <webgriffe_servergoogleanalytics>
                <class>Webgriffe_ServerGoogleAnalytics_Helper</class>
            </webgriffe_servergoogleanalytics>
        </helpers>
        <models>
            <webgriffe_servergoogleanalytics>
                <class>Webgriffe_ServerGoogleAnalytics_Model</class>
                <resourceModel>webgriffe_servergoogleanalytics_resource</resourceModel>
            </webgriffe_servergoogleanalytics>
            <webgriffe_servergoogleanalytics_resource>
                <class>Webgriffe_ServerGoogleAnalytics_Model_Resource</class>
            </webgriffe_servergoogleanalytics_resource>
        </models>

        <events>
            <sales_order_save_after>
                <observers>
                    <webgriffe_servergoogleanalytics>
                        <type>singleton</type>
                        <class>webgriffe_servergoogleanalytics/observer</class>
                        <method>saveGaCookieValue</method>
                    </webgriffe_servergoogleanalytics>
                </observers>
            </sales_order_save_after>
            <sales_order_invoice_pay>
                <observers>
                    <webgriffe_servergoogleanalytics>
                        <type>singleton</type>
                        <class>webgriffe_servergoogleanalytics/observer</class>
                        <method>onInvoicePaid</method>
                    </webgriffe_servergoogleanalytics>
                </observers>
            </sales_order_invoice_pay>
        </events>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <Webgriffe_ServerGoogleAnalytics>
                    <files>
                        <default>Webgriffe_ServerGoogleAnalytics.csv</default>
                    </files>
                </Webgriffe_ServerGoogleAnalytics>
            </modules>
        </translate>
    </adminhtml>

    <default>
        <google>
            <servergoogleanalytics>
                <track-on-invoice-paid>1</track-on-invoice-paid>
            </servergoogleanalytics>
        </google>
    </default>
</config>
